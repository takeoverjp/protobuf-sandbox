{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file my",
      "command": "make",
      "args": [
        "${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    }
  ],
  "version": "2.0.0"
}